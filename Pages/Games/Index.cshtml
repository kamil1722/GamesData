@page "{searchString?}"
@model GamesData.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List games</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
         Game: <input type="text" asp-for="SearchGames" />
         <input type="submit" value="Filter" />           
    </p>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GamesTable[0].NameGame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamesTable[0].NameStudio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GamesTable)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameGame)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameStudio)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
